<div class="login">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login__container'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="login__group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="login__group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", minlength: 6 %>
  </div>

  <div class="login__group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="login__button actions">
    <%= f.submit "Создать админку" %>
  </div>
<% end %>



</div>