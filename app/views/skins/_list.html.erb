<% if skins.present? %>
<div class="container-fluid" id="filterrific_results">
    <div  class="row">
      <%= render @skins %>
    </div>
</div>

<div id="hiding">
  <%= will_paginate skins %>
</div>

<% else %>
<div class="text-center" style="width: 100%; margin-top: 20px;">
    <%= image_tag('nothing.svg', width: '300px') %>
</div>
<% end %>